<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.CategoryActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/java_btn"
                android:layout_width="217dp"
                android:layout_height="163dp"
                android:layout_marginTop="36dp"
                android:background="@drawable/round_outline"
                android:clickable="true"
                android:clipToOutline="true"
                android:cropToPadding="false"
                android:elevation="5dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/java" />

            <TextView
                android:id="@+id/java_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:text="Основы Java"
                android:textColor="#0B0B0B"
                android:textSize="24sp" />

            <ImageButton
                android:id="@+id/kotlin_btn"
                android:layout_width="217dp"
                android:layout_height="163dp"
                android:layout_marginTop="56dp"
                android:background="@drawable/round_outline"
                android:clickable="true"
                android:clipToOutline="true"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/kotlin" />

            <TextView
                android:id="@+id/kotlin_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:text="Основы Kotlin"
                android:textColor="#0B0B0B"
                android:textSize="24sp" />

            <ImageButton
                android:id="@+id/android_btn"
                android:layout_width="217dp"
                android:layout_height="163dp"
                android:layout_marginTop="56dp"
                android:background="@drawable/round_outline"
                android:clickable="true"
                android:clipToOutline="true"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/android" />

            <TextView
                android:id="@+id/android_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:text="Основы Android"
                android:textColor="#0B0B0B"
                android:textSize="24sp" />

            <ImageButton
                android:id="@+id/oop_btn"
                android:layout_width="match_parent"
                android:layout_height="163dp"
                android:layout_marginTop="56dp"
                android:background="@drawable/round_outline"
                android:clickable="true"
                android:clipToOutline="true"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/oop" />

            <TextView
                android:id="@+id/oop_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:text="Основы ООП"
                android:textColor="#0B0B0B"
                android:textSize="24sp" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>